# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/api-response-manager

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Backend Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=http://localhost:5173

# Tunnel Server Configuration
TUNNEL_SERVER_URL=ws://tunnel-server:8080
BASE_DOMAIN=tunnel.arm.dev

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:8080

# Proxy Configuration
PROXY_PORT=3001
BACKEND_URL=http://backend:5000

# Slack Webhook (Optional - for notifications)
SLACK_WEBHOOK_URL=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Social Authentication (OAuth)
# Setup guides: See SOCIAL_AUTH_SETUP.md and GITHUB_LOGIN_SETUP.md

# Google OAuth - Get credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - Get credentials from https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth - Get credentials from https://portal.azure.com/
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:5173/auth/microsoft/callback

# SAML Configuration (Optional - for enterprise SSO)
# Generate private key with: openssl genrsa -out private-key.pem 2048
# Then set the full key content here (use \n for line breaks)
SAML_PRIVATE_KEY=
